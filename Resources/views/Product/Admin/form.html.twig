{% form_theme form 'MsiAdminBundle:Form:form.html.twig' %}

<ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">{{ 'Content'|trans }}</a></li>
    <li><a href="#tab4" data-toggle="tab">{{ 'Prices'|trans }}</a></li>
    <li><a href="#tab2" data-toggle="tab">{{ 'Settings'|trans }}</a></li>
    <li><a href="#tab3" data-toggle="tab">{{ 'Other'|trans }}</a></li>
</ul>

{{ form_errors(form) }}
<div class="tab-content">
    <div class="tab-pane fade active in" id="tab1">
        {% for translation in form.translations %}
            {{ form_row(translation.name) }}
            {{ form_row(translation.description) }}
        {% endfor %}
        {{ form_row(form.imageFile) }}
        {{ form_row(form.categories) }}
    </div>

    <div class="tab-pane fade" id="tab4">
        {{ form_row(form.taxable) }}
        {{ form_row(form.price) }}
        {{ form_row(form.discountedPrice) }}
        {{ form_row(form.discountedFrom) }}
        {{ form_row(form.discountedTo) }}
    </div>

    <div class="tab-pane fade" id="tab2">
        {{ form_row(form.published) }}
    </div>

    {% set form_rest = form_rest(form) %}

    <div class="tab-pane fade" id="tab3">
        {% if form_rest %}
            {{ form_rest|raw }}
        {% else %}
            There is no other field.
        {% endif %}
    </div>
</div>
